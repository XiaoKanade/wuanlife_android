<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/posts_title"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:id="@+id/posts_linear"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@id/posts_title"
        >
        <TextView
            android:id="@+id/posts_nickname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/posts_groupname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/posts_createTtime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="10dp"
            android:gravity="right|center_vertical"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/posts_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/posts_linear"
         />
    <ImageView
        android:id="@+id/posts_image"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/posts_text"/>
</RelativeLayout>