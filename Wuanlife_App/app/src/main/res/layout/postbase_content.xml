<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/postBase_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:background="#9d2cd5" />
    <LinearLayout
        android:id="@+id/postBase_linear"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/postBase_nickname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"

            android:background="#48b0bf"
            />
        <TextView
            android:id="@+id/postBase_NG"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:text="发表于"/>
        <TextView
            android:id="@+id/postBase_groupName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10dp"
            android:gravity="center"
            android:background="#48b0bf" />
        <TextView
            android:id="@+id/postBase_createTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="10dp"
            android:gravity="right|center_vertical"
            android:background="#48b0bf" />
    </LinearLayout>
    <TextView
        android:id="@+id/postBase_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
android:paddingTop="10dp"
        android:background="#2eb692" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/postBase_image01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        />
        <ImageView
            android:id="@+id/postBase_image02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/postBase_image03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/postBase_linera02"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/edit"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:text="编辑"/>
        <Button
            android:id="@+id/delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:text="删除"/>
    </LinearLayout>


    <include layout="@layout/postbase_reply"/>

</LinearLayout>